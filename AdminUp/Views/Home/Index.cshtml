@model IEnumerable<AdminUp.DataAccessLibrary.Models.Appartment>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h2>Building A1 Entrance A</h2>
    <p>Bucharest, Sector 1, 42 Pineapple Street, Romania</p>
    <hr/>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Number</th>
                <th scope="col">Owner</th>
                <th scope="col" title="Number of residents in the appartment.">Pers</th>
                <th scope="col" title="Based on metered consumption.">Water</th>
                <th scope="col" title="Based on metered consumption.">Heating</th>
                <th scope="col" title="Bill total / building number of inhabitants">Cleaning</th>
                <th scope="col" title="Previous unpaid monthly appartment bills.">Debt</th>
                <th scope="col" title="Total amount to pay for the current month.">Total</th>
                <th scope="col">Number</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appartment in Model)
            {
                <tr>
                    <td>@appartment.Number</td>
                    <td>@appartment.OwnerId</td>
                    <td>@appartment.NumberOfInhabitants</td>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                    <td>@appartment.Number</td>
                </tr>
            }
        </tbody>
    </table>
    
</div>
