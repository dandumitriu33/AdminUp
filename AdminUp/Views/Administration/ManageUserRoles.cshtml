@model IEnumerable<UserRoleModel>

@{
    ViewBag.Title = "Manage User Roles";
}

<div class="text-center">
    <h2>Manage user roles</h2>
</div>

<div class="row">
    <div class="col-md-12">
        <form method="post">

            <div class="form-group">
                <label>Enter user email</label>
                <input class="form-control" name="Email" />

            </div>
            <button type="submit" class="btn btn-primary">Show Roles</button>
        </form>
    </div>
</div>

@if (Model != null)
{
    <div class="text-center">
        <h3>@Model.First().User.Email</h3>
        <hr />
        @foreach (var entry in Model)
        {
            <p>@entry.RoleName</p>
        }
        <hr />
        <div>
            <button class="btn btn-primary">Make this user a SuperAdmin</button>
            <button class="btn btn-primary">Make this user a BuildingAdmin</button>
            <button class="btn btn-primary">Make this user an AppartmentOwner</button>
        </div>
        <hr/>
        <div>
            <button class="btn btn-danger">Remove SuperAdmin from this user</button>
            <button class="btn btn-danger">Remove BuildingAdmin from this user</button>
            <button class="btn btn-danger">Remove AppartmentOwner from this user</button>
        </div>
    </div>
}

