@model IEnumerable<UserRoleModel>

@{
    ViewBag.Title = "Manage User Roles";
}

<div class="text-center">
    <h2>Manage user roles</h2>
</div>

<div class="row">
    <div class="col-md-12">
        <form method="get">

            <div class="form-group">
                <label>Enter user email</label>
                <input class="form-control" name="Email" />

            </div>
            <button type="submit" class="btn btn-primary">Show Roles</button>
        </form>
    </div>
</div>

@if (Model != null)
{
    <div class="text-center">
        <h3>@Model.First().User.Email</h3>
        <hr />
        @foreach (var entry in Model)
        {
            <p>@entry.RoleName</p>
        }
        <hr />
        <div>
            <table>
                <tr>
                    <td>
                        <form method="post" asp-action="MakeSuperAdmin" asp-controller="Administration">
                            <input type="hidden" name="Email" value="@Model.First().User.Email">
                            <button class="btn btn-primary">Make this user a SuperAdmin</button>
                        </form>
                    </td>
                    <td>
                        <form method="post" asp-action="MakeBuildingAdmin" asp-controller="Administration">
                            <input type="hidden" name="Email" value="@Model.First().User.Email">
                            <button class="btn btn-primary">Make this user a BuildingAdmin</button>
                        </form>
                    </td>
                    <td>
                        <form method="post" asp-action="MakeAppartmentOwner" asp-controller="Administration">
                            <input type="hidden" name="Email" value="@Model.First().User.Email">
                            <button class="btn btn-primary">Make this user an AppartmentOwner</button>
                        </form>
                    </td>
                </tr>
            </table>
        </div>
        <hr/>
        <div>
            <table>
                <tr>
                    <td>
                        <form method="post" asp-action="RemoveSuperAdmin" asp-controller="Administration">
                            <input type="hidden" name="Email" value="@Model.First().User.Email">
                            <button class="btn btn-danger">Remove SuperAdmin from this user</button>
                        </form>
                    </td>
                    <td>
                        <form method="post" asp-action="RemoveBuildingAdmin" asp-controller="Administration">
                            <input type="hidden" name="Email" value="@Model.First().User.Email">
                            <button class="btn btn-danger">Remove BuildingAdmin from this user</button>
                        </form>
                    </td>
                    <td>
                        <form method="post" asp-action="RemoveAppartmentOwner" asp-controller="Administration">
                            <input type="hidden" name="Email" value="@Model.First().User.Email">
                            <button class="btn btn-danger">Remove AppartmentOwner from this user</button>
                        </form>
                    </td>
                </tr>
            </table>
        </div>
    </div>
}

